pipeline {
    agent any

    tools {
        nodejs "node16"   // Jenkins me NodeJS plugin se pehle Node 16 ya 18 install karo
    }

    stages {
        stage('Clean Workspace') {
            steps {
                echo "Cleaning Jenkins workspace..."
                deleteDir()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/lallanborasi12/project2.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing Node.js dependencies..."
                sh '''
                  rm -rf node_modules package-lock.json
                  npm install
                '''
            }
        }

        stage('Build Next.js App') {
            steps {
                echo "Building Next.js app..."
                sh 'npm run build'
            }
        }

        stage('Export Static Files') {
            steps {
                echo "Exporting Next.js app..."
                sh 'npm run build && npx next export -o out'
            }
        }

        stage('Deploy to Apache') {
            steps {
                echo "Deploying build to Apache..."
                sh '''
                  sudo rm -rf /var/www/html/*
                  sudo cp -r out/* /var/www/html/
                  sudo chown -R www-data:www-data /var/www/html/
                  sudo systemctl restart apache2
                '''
            }
        }
    }
}
