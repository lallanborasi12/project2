pipeline {
    agent any

    stages {
        stage('Clean Workspace') {
            steps {
                echo 'Cleaning Jenkins Workspace'
                deleteDir()
            }
        }

        stage('Clone Repo') {
            steps {
                echo 'Cloning Repository...'
                git branch: 'master', url: 'https://github.com/lallanborasi12/project2.git'
            }
        }

        stage('Install Dependencies & Build') {
            steps {
                echo 'Installing dependencies and building...'
                sh '''
                    cd $WORKSPACE
                    npm install
                    npm run build
                '''
            }
        }

        stage('Deploy with PM2') {
            steps {
                echo 'Deploying app using PM2...'
                sh '''
                    APP_DIR=/var/www/html3/reactjs-app

                    # Copy build files to deployment directory
                    sudo mkdir -p $APP_DIR
                    sudo rsync -av --delete --exclude=.git --exclude=node_modules ./ $APP_DIR

                    cd $APP_DIR

                    # Ensure dependencies
                    npm install

                    # Start with PM2 (replace if already running)
                    pm2 stop react-app || true
                    pm2 delete react-app || true
                    pm2 start npm --name "react-app" -- run start

                    # Save PM2 process list and enable on reboot
                    pm2 save
                    pm2 startup systemd -u jenkins --hp /var/lib/jenkins
                '''
            }
        }
    }
}
