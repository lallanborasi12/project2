pipeline {
    agent any

    environment {
        NODE_HOME = "/usr/bin/node"
        PATH = "$NODE_HOME:$PATH"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                echo 'Cleaning Jenkins Workspace'
                deleteDir()
            }
        }

        stage('Checkout Repository') {
            steps {
                echo 'Cloning Project Repo...'
                git branch: 'master', url: 'https://github.com/lallanborasi12/project2.git'
            }
        }

        stage('Install Dependencies & Build') {
            steps {
                echo 'Installing dependencies and building project...'
                sh '''
                    npm install
                    npm run build
                '''
            }
        }

        stage('Deploy with PM2') {
            steps {
                echo 'Deploying application with PM2...'
                sh '''
                    pm2 delete project2 || true
                    pm2 start npm --name "project2" -- run start
                '''
            }
        }
    }
}
